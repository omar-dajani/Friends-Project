<h1>Friends</h1>

<div id="friends">
  <% if user_signed_in? %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">Twitter</th>
          <th scope="col">Added by</th>
          <th scope="col">Profile</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
            <tr>
              <td>
                <%= friend.first_name %>
              </td>
              <td>
                <%= friend.last_name %>
              </td>
              <td>
                <%= friend.email %>
              </td>
              <td>
                <%= friend.phone %>
              </td>
              <td>
                <%= friend.twitter %>
              </td>
              <td>
                <%= friend.user_id %>
              </td>
              <td>
                <%= link_to "View", friend, class:"btn btn-primary" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "New friend", new_friend_path, class:"btn btn-primary" %>
  <% else %>
    <h3>
      It looks like you are not signed in. Please sign in or create an account to get started!
    </h3>
  <% end %>
</div>
